<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Microsoft Kinect v2 Live for simulation -->
  <xacro:macro name="cuboid_sim_3dsensor">
    <gazebo reference="camera_link">  
	<material>Gazebo/FlatBlack</material>
      <sensor type="depth" name="camera">
        <always_on>true</always_on>
        <update_rate>4.0</update_rate>
        <camera>
          <horizontal_fov>${60.0*M_PI/180.0}</horizontal_fov>
          <image>
            <format>R8G8B8</format>
            <width>640</width>
            <height>480</height>
          </image>
          <clip>
            <near>0.40</near>
            <far>8.0</far>
          </clip>
        </camera>
        <plugin name="kinect_camera_controller" filename="libgazebo_ros_openni_kinect.so">
          <cameraName>camera</cameraName>
          <alwaysOn>true</alwaysOn>
          <updateRate>4</updateRate>
          <imageTopicName>qhd/image_color</imageTopicName>
          <depthImageTopicName>qhd/image_depth_rect</depthImageTopicName>
          <pointCloudTopicName>qhd/points</pointCloudTopicName>
          <cameraInfoTopicName>qhd/camera_info</cameraInfoTopicName>
          <!-- <depthImageCameraInfoTopicName>depth/camera_info</depthImageCameraInfoTopicName> -->
          <frameName>camera_depth_optical_frame</frameName>
          <baseline>0.1</baseline>
          <distortion_k1>0.0</distortion_k1>
          <distortion_k2>0.0</distortion_k2>
          <distortion_k3>0.0</distortion_k3>
          <distortion_t1>0.0</distortion_t1>
          <distortion_t2>0.0</distortion_t2>
          <pointCloudCutoff>0.4</pointCloudCutoff>
        </plugin>
      </sensor>
    </gazebo>
  </xacro:macro>
</robot>
